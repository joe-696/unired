<%= form_with(model: faculty) do |form| %>
  
    <%= @faculty.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>
  
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>

<% end %>
  
  